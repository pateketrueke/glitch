#!/bin/sh

':' // ; exec "$(command -v nodejs || command -v node)" "$0" "$@"
;

'use strict';

module.exports = () => {
  const serverFactory = require('../src/application');
  const server = serverFactory();

  server.listen(`0.0.0.0:${process.env.PORT}`);

  return server;
};

if (require.main === module) {
  module.exports();
}
